<h1>Followers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Bio</th>
    </tr>
  </thead>

  <tbody>
    <% @followers.each do |follower| %>
      <tr>
        <td><%= follower.username %></td>
        <td><%= follower.name %></td>
        <td><%= follower.bio %></td>
        <td><%= link_to 'Show', follower %></td>
      </tr>
    <% end %>
  </tbody>
</table>
